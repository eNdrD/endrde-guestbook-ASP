
@{
    ViewData["Title"] = "Home Page";
}

@model endrde_guestbook.Models.GuestbookEntry


<div class="text-center">
    <h1 class="display-4">Guestbook</h1>
    <div class="guestbook-container">
        @foreach (var item in Guestbook.ListOfGuestbookEntries)
        {
            <div class="guestbook-entry">
                <p><em>Name:</em>@item.GuestName</p>
                <p><em>Message:</em>@item.GuestMessage</p>
                <p><em>Date:</em>@item.EntryDateTime.ToString()</p>
            </div>
        }

    </div>
    <div class="guestbook-form">
        <form asp-action="AddGuestbookEntry" asp-controller="Guestbook">
            <label asp-for="GuestName" >Guest Name</label>
            <input asp-for="GuestName" placeholder="Your message goes here"/>
            <label asp-for="GuestMessage"></label>
            <input asp-for="GuestMessage" placeholder="Your message goes here"/>
            <input type="submit" />
        </form>

    </div>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>
